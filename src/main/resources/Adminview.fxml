<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="iss.bugproject.controller.AdminController"
      spacing="10" alignment="CENTER" prefWidth="400" prefHeight="300" style="-fx-padding: 20">

    <Label text="Employees List"/>
    <ListView fx:id="employeeList" prefHeight="200" prefWidth="300"/>

    <Button fx:id="manageAccountsButton" text="Manage Accounts" onAction="#handleManageAccounts" />
    <Button fx:id="logoutButton" text="Log Out" onAction="#handleLogout" />

</VBox>
